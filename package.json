{
  "name": "shopify-app-development-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Shopify app development",
  "scripts": {
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "dev": "cross-env NODE_ENV=development nodemon ./server/index.js --watch ./server/index.js",
    "login": "bundle exec shopify login",
    "serve": "bundle exec shopify node serve",
    "start": "cross-env NODE_ENV=production node ./server/index.js",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": [
      "./bin/prevent-direct-commit.sh",
      "yarn run goodcheck"
    ],
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "7.12.10",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@shopify/app-bridge-react": "^2.0.2",
    "@shopify/app-bridge-utils": "^2.0.2",
    "@shopify/koa-shopify-auth": "^4.1.2",
    "@shopify/polaris": "^6.2.0",
    "apollo-boost": "^0.4.9",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "isomorphic-fetch": "^3.0.0",
    "koa": "^2.13.1",
    "koa-router": "^10.0.0",
    "koa-session": "^6.1.0",
    "next": "^11.1.1",
    "next-env": "^1.1.0",
    "node-fetch": "^2.6.1",
    "react": "^16.10.1",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.10.1",
    "webpack": "^4.44.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-stage-3": "^7.0.0",
    "@types/js-cookie": "^2.2.6",
    "@types/koa": "^2.13.3",
    "@types/koa-router": "^7.4.2",
    "@types/koa-session": "^5.10.3",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "babel-jest": "^27.0.6",
    "babel-register": "^6.26.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.3.2",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "16.14.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
